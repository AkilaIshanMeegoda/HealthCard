# Production Environment Variables
# These will be replaced with actual values from GCP Secret Manager during deployment

NODE_ENV=production
PORT=3000

# MongoDB Connection (fetched from Secret Manager in startup script)
MONGODB_URL=

# JWT Configuration (fetched from Secret Manager in startup script)
JWT_SECRET=

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
